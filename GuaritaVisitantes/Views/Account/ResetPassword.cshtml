@model GuaritaVisitantes.Models.ResetPasswordViewModel

@{
    ViewBag.Title = "Redefinir Senha";
}

<link href="~/Content/BackgroundLogin.css" rel="stylesheet" />

<div class="corpo">
    <div class="painel">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="titulo-login">
                <img src="~/Content/img/logotradicao.png" alt="Logo" />
                <label class="titulo">Visitantes</label>
                <label class="subtitulo">@ViewBag.Title</label>
            </div>

            @Html.ValidationSummary("", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.Code)
            @Html.HiddenFor(model => model.Email)

            <div class="item-painel">
                @Html.LabelFor(m => m.Password, new { @class = "label-login" })
                @Html.PasswordFor(m => m.Password, new { @class = "input-login" })
            </div>

            <div class="item-painel">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "label-login" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-login" })
            </div>

            <input type="submit" class="btn-login" value="Redefinir" />
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
