@model GuaritaVisitantes.Models.SetPasswordViewModel
@{
    ViewBag.Title = "Alterar Senha do Usuário";
}

<div class="card">
    <div class="card-title">
        @ViewBag.Title
    </div>

    <div class="card-body">
        @using (Html.BeginForm("SetPassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "formSetPassword" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="card-body-item">
                @Html.LabelFor(m => m.UserId, new { @class = "control-label" })
                <select id="UserId" name="UserId" class="form-control select-users" style="width: 100%;">
                    <option></option>
                </select>
            </div>
            <div class="card-body-item">
                @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
            <div class="card-body-item">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>     
        }
    </div>

    <div class="card-footer">
        <input id="btnSetPassword" type="button" class="btn btn-success" value="Alterar" />
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    let btnSetPassword = document.getElementById('btnSetPassword');
    btnSetPassword.onclick = () => {
        document.getElementById('formSetPassword').submit();
    }
</script>