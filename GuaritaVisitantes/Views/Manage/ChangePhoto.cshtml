@model GuaritaVisitantes.Models.ChangePhotoViewModel

@{
    ViewBag.Title = "Mudar Foto";
}

<div class="card">
    <div class="card-title">
        @ViewBag.Title
    </div>

    <div class="card-body">
        @using (Html.BeginForm("ChangePhoto", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data", id = "formChangePassword" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="card-body-item">
                @Html.LabelFor(model => model.Foto, htmlAttributes: new { @class = "form-control-label" })
                <input class="form-control foto" id="Foto" name="Foto" type="file" accept=".jpg, .jpeg, .png" />
                <div id="imgdiv" style="margin-top: 10px; background-color: rgb(225, 225, 225); border: 2px solid rgb(74, 74, 74); text-align: center;">
                    @{
                        if (ViewBag.Foto != null)
                        {
                            <img id="fotoimg" name="fotoimg" src="@ViewBag.Foto" style="width: 120px;" />
                        }
                    }
                </div>
                @Html.ValidationMessageFor(model => model.Foto, "", new { @class = "text-danger" })
            </div>

        }
    </div>

    <div class="card-footer">
        <input id="btnChPassword" type="button" class="btn btn-success" value="Alterar" />
    </div>
</div>

<script>
    let btnChPassword = document.getElementById('btnChPassword');
    btnChPassword.onclick = () => {
        document.getElementById('formChangePassword').submit();
    }
</script>
